<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingOptionsActivity"
    android:background="@color/lightest_yellow_orange2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:background="@color/lightest_yellow_orange"
        app:navigationIcon="@drawable/ic_baseline_close_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="HP Restaurant"
            android:textColor="@color/text_color"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_below="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/table_dishes_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/lighter_bee"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn Món Và Đặt Bàn"
                android:drawableTint="@color/text_color"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:padding="20dp"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/table_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="@color/lighter_bee"
            android:elevation="5dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt Bàn Trước"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:padding="20dp"
                android:textColor="@color/text_color"
                android:drawableTint="@color/text_color"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dishes_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="@color/lighter_bee"
            android:elevation="5dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt Món Trước"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:padding="20dp"
                android:textColor="@color/text_color"
                android:drawableTint="@color/text_color"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>